<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:background="@drawable/text_in"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <endless.syria.sychat.Utils.Models.CircleImageView
        android:id="@+id/cuimage_message_profile"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/text_in"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:contentDescription="@string/app_name"
        android:layout_marginStart="8dp"/>


    <TextView
        android:id="@+id/cutext_message_body"
        android:background="@drawable/text_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="240dp"
        android:padding="8dp"
        android:textColor="#000000"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toRightOf="@+id/cuimage_message_profile"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/cutext_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@+id/cutext_message_body"
        android:layout_marginLeft="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/cutext_message_body"
        tools:ignore="SmallSp"
        android:layout_marginStart="4dp" />

</androidx.constraintlayout.widget.ConstraintLayout>